{
    "apps": [
        {
            "name": "node-webpack-react",
            "script": "./bin/www",
            "watch": true,
            "ignore_watch": [
                "./git",
                "node_modules"
            ],
            "node_args": "--harmony",
            "instances": 0,
            "exec_mode": "cluster",
            "env": {
                "NODE_ENV": "production",
                "PORT": "8080",
                "CONFIG_DIR": "/home/node/***config/"
            },
            "env_dev": {
                "NODE_ENV": "dev",
                "PORT": "12345",
                "CONFIG_DIR": "./server/config/"
            }
        }
    ]
}
